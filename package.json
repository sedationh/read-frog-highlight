{
  "name": "read-frog",
  "type": "module",
  "version": "1.0.1",
  "private": true,
  "description": "Read Frog is a browser extension designed to help you learn languages deeply from any website.",
  "scripts": {
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "compile": "tsc --noEmit",
    "dev": "wxt",
    "dev:edge": "wxt -b edge",
    "dev:firefox": "wxt -b firefox",
    "postinstall": "wxt prepare",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky",
    "release": "changeset tag && git push origin --tags",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox"
